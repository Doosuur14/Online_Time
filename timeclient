#!/bin/bash

# Check if IP and port are passed as arguments
if [ $# -ne 2 ]; then
    echo "Usage: $0 <server_ip> <port>"
    exit 1
fi

# Assign the IP and port from the command line arguments
SERVER_IP=$1
PORT=$2

# Connect to the server and receive the date-time message
echo "Connecting to $SERVER_IP on port $PORT..."
nc $SERVER_IP $PORT
